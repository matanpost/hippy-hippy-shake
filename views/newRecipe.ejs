


<div class="container-fluid align-items-center addRecipe-bgimg" style="height: 100vh;">
  <div style="display:flex; justify-content: center; align-self: center; margin-top:10%;">
      <div class="card mt-5 " style="width:30rem; background: rgba(255, 255, 255, 0.5);">
          <form class="needs-validation px-1 py-4 text-center" enctype="multipart/form-data" novalidate method="POST" name="new"  action="<% if (update) { %>
            /recipes/<%- recipe._id %>/update
           <% } else { %>
            /recipes/new
          <% } %>">
                  <div class=" center-forms">
              <div class="form-row ">
                  <div class="col   mb-3">
                      <label for="validationCustom01">Cocktail Name</label>
                      <input type="text" class="form-control mt-2" type="text" name="name" value="<% if (update) { %><%= recipe.name %><% } %>"
                           required>
                      <div class="invalid-feedback">
                          You need to provide the cocktail name.
                      </div>
                  </div>
              </div>
              <div class="form-row">
                  <div class="col mb-3">
                      <label for="validationCustom02">Image</label>
                      <input type="file" name="imageUrl" accept="image/png, image/jpg" class="form-control mt-2" id="validationCustom02"
                          placeholder="Please use only PNG or JPG file types" value="<% if (update) { %><%= recipe.image %><% } %>">
                  </div>
                  <div class="form-row">
                      <div class="col mb-3">
                          <label for="validationCustom03">Ingredients</label>
                          <input type="text" class="form-control mt-2" name="ingredients" id="validationCustom03"
                          value="<% if (update) { %><%= recipe.ingredients.join(',') %><% } %>" placeholder="Separate each ingredient with a comma" required>
                          <div class="invalid-feedback">
                              Please provide all needed ingredients.
                          </div>
                      </div>
                  </div>
                  <div class="form-row">
                    <div class="col mb-3">
                        <label for="validationCustom03">Instructions</label>
                        <input type="text-field" class="form-control mt-2" name="instructions" id="validationCustom03"
                        value="<% if (update) { %><%= recipe.instructions %><% } %>" required>
                        <div class="invalid-feedback">
                            Please provide the full instructions for your cocktail.
                        </div>
                    </div>
                </div>
                <div class="form-row">
                  <div class="col mb-3">
                      <label for="validationCustom03">Glass</label>
                      <input type="text" class="form-control mt-2" name="glass" id="validationCustom03"
                      value="<% if (update) { %><%= recipe.glass %><% } %>">
                  </div>
              </div>
                  <div class="text-center">
                      <button class="btn btn-primary" type="submit">Add Recipe</button>
                  </div>
              </div>
          </form>
      </div>
  </div>
</div>
<script>
  // Example starter JavaScript for disabling form submissions if there are invalid fields
  (function () {
      'use strict';
      window.addEventListener('load', function () {
          // Fetch all the forms we want to apply custom Bootstrap validation styles to
          var forms = document.getElementsByClassName('needs-validation');
          // Loop over them and prevent submission
          var validation = Array.prototype.filter.call(forms, function (form) {
              form.addEventListener('submit', function (event) {
                  if (form.checkValidity() === false) {
                      event.preventDefault();
                      event.stopPropagation();
                  }
                  form.classList.add('was-validated');
              }, false);
          });
      }, false);
  })();
</script>